page {
    background: #fff;
}


.swiper {
    height: 400rpx;
    width: 100%;
}

.slide-image {
    border-radius: 10px;
    background-color: #E34E54;
    width: 96%;
    margin: 0 5px;
    height: 400rpx;
}
.btn{
  height: 30px;
  width: 76%;
  border-radius: 20px;
  position: absolute;
  bottom: 0;
  margin: 20px 10%;
  background-color: #E5AEAF;
  color: #fff;
  text-align: center;
}
.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}
.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
}
.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
}
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}
